<div class="column">
  <div class="card">
    <div class="card-content">
      <div class="media">
        <% if customer.image.present? %>
          <div class="media-left">
            <figure class="image is-48x48">
              <%= image_tag customer.image %>
            </figure>
          </div>
        <% end %>
        <div class="media-content">
          <p class="title is-4"><%= customer.name %></p>
          <% if customer.email.present? %>
            <p class="subtitle is-6"><%= customer.email %></p>
          <% end %>
          <% if customer.phone_number.present? %>
            <p class="subtitle is-6"><%= customer.email %></p>
          <% end %>
        </div>
      </div>

      <div class="content">
        <%= customer.notes %>
      </div>
    </div>
  </div>
</div>